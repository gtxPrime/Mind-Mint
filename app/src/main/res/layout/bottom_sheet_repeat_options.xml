<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_shape"
    android:padding="20dp"
    tools:ignore="HardcodedText,Autofill,LabelFor">

    <!-- Header -->
    <TextView
        android:id="@+id/sheetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter18regular"
        android:text="Repeats"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Frequency Section -->
    <TextView
        android:id="@+id/frequencyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter18regular"
        android:text="Every"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sheetTitle" />

    <!-- Frequency Input Container -->
    <LinearLayout
        android:id="@+id/frequencyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/frequencyLabel">

        <!-- Number Input -->
        <EditText
            android:id="@+id/frequencyNumber"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/inter18regular"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/white"
            android:textColorHint="@color/textColor"
            android:textSize="16sp" />

        <!-- Frequency Type Spinner -->
        <Spinner
            android:id="@+id/frequencyTypeSpinner"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@drawable/background_outline"
            android:paddingHorizontal="16dp"
            android:theme="@style/SpinnerTheme" />

    </LinearLayout>

    <!-- Weekly Options (visible only when weekly is selected) -->
    <LinearLayout
        android:id="@+id/weeklyOptionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/frequencyContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter18regular"
            android:text="On these days"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/weekDaysContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Day buttons will be added programmatically -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSunday"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter18regular"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="S"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:strokeColor="@color/sexyGrey"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMonday"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter18regular"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="M"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTuesday"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter18regular"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="T"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWednesday"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter18regular"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="W"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnThursday"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter18regular"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="T"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFriday"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter18regular"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="F"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaturday"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/circle"
                android:fontFamily="@font/inter18regular"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="S"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Monthly Options (visible only when monthly is selected) -->
    <LinearLayout
        android:id="@+id/monthlyOptionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/weeklyOptionsContainer">

        <RadioGroup
            android:id="@+id/monthlyRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioMonthlyByDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/brainColor"
                android:checked="true"
                android:fontFamily="@font/inter18regular"
                android:text="Day 28"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioMonthlyByWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/brainColor"
                android:fontFamily="@font/inter18regular"
                android:text="Fourth Sunday"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RadioGroup>

    </LinearLayout>

    <!-- Start Date Section -->
    <TextView
        android:id="@+id/startsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter18regular"
        android:text="Starts"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthlyOptionsContainer" />

    <!-- Start Date Display -->
    <LinearLayout
        android:id="@+id/startDateContainer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_outline"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/startsLabel">

        <TextView
            android:id="@+id/startDateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter18regular"
            android:text="28 September"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/firstOccurrenceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter18regular"
            android:text="First occurrence will be 28 September"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- End Section -->
    <TextView
        android:id="@+id/endsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter18regular"
        android:text="Ends"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDateContainer" />

    <!-- End Options -->
    <RadioGroup
        android:id="@+id/endRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/endsLabel">

        <RadioButton
            android:id="@+id/radioNever"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/brainColor"
            android:checked="true"
            android:fontFamily="@font/inter18regular"
            android:text="Never"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioOnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/brainColor"
                android:fontFamily="@font/inter18regular"
                android:text="On"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/endDateInput"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/background_outline"
                android:clickable="true"
                android:focusable="false"
                android:fontFamily="@font/inter18regular"
                android:gravity="center_vertical"
                android:hint="28 Oct 2026"
                android:paddingHorizontal="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/textColor"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioAfterOccurrences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/brainColor"
                android:fontFamily="@font/inter18regular"
                android:text="After"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/occurrencesInput"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_outline"
                android:fontFamily="@font/inter18regular"
                android:gravity="center"
                android:hint="30"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/textColor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inter18regular"
                android:text="occurrences"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </RadioGroup>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtons"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/endRadioGroup">

        <Button
            android:id="@+id/cancelButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/inter18regular"
            android:text="Cancel"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/doneButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_pill_bg"
            android:fontFamily="@font/inter18regular"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
