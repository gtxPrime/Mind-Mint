<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/cardColor"
    app:cardCornerRadius="24dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="Close"
            android:focusable="true"
            android:gravity="end"
            android:text="✕"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/coinSackImage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/sack" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/coinInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Mint Crystals are earned by focusing and completing tasks."
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/coinEconomyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Crystal Economy"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Section: Tasks & Habits (card) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="🪙  Tasks &amp; Habits"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif"
                            android:lineSpacingMultiplier="1.3"
                            android:text="✅ Tasks: +2 each (habit-related tasks excluded)\n✅ Habits: +5 each"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Section: Focus Timer Rewards (card) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="⏱️  Focus Timer Rewards"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <!-- Baseline progress line -->
                            <View
                                android:id="@+id/focusBaseline"
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:alpha="0.6"
                                android:background="@color/white"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5" />

                            <androidx.constraintlayout.helper.widget.Flow
                                android:id="@+id/flowTicks"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:constraint_referenced_ids="tick30,tick60,tick90,tick120,tick150,tick180"
                                app:flow_horizontalAlign="center"
                                app:flow_horizontalStyle="spread_inside"
                                app:flow_verticalAlign="top"
                                app:flow_wrapMode="none"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!-- Reusable TICK block -->
                            <!-- 30m -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/tick30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="6dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt30Bonus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="+2"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt30ArrowUp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▲"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt30Bonus"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <View
                                    android:id="@+id/line30"
                                    android:layout_width="2dp"
                                    android:layout_height="28dp"
                                    android:alpha="0.7"
                                    android:background="@color/white"
                                    app:layout_constraintTop_toBottomOf="@id/txt30ArrowUp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt30ArrowDown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▼"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/line30"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt30Distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="sans-serif"
                                    android:text="30m"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt30ArrowDown"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <!-- 60m -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/tick60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="6dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt60Bonus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="+5"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt60ArrowUp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▲"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt60Bonus"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <View
                                    android:id="@+id/line60"
                                    android:layout_width="2dp"
                                    android:layout_height="28dp"
                                    android:alpha="0.7"
                                    android:background="@color/white"
                                    app:layout_constraintTop_toBottomOf="@id/txt60ArrowUp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt60ArrowDown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▼"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/line60"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt60Distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="sans-serif"
                                    android:text="60m"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt60ArrowDown"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <!-- 90m -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/tick90"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="6dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt90Bonus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="+7"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt90ArrowUp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▲"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt90Bonus"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <View
                                    android:id="@+id/line90"
                                    android:layout_width="2dp"
                                    android:layout_height="28dp"
                                    android:alpha="0.7"
                                    android:background="@color/white"
                                    app:layout_constraintTop_toBottomOf="@id/txt90ArrowUp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt90ArrowDown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▼"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/line90"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt90Distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="sans-serif"
                                    android:text="90m"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt90ArrowDown"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <!-- 120m -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/tick120"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="6dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt120Bonus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="+10"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt120ArrowUp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▲"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt120Bonus"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <View
                                    android:id="@+id/line120"
                                    android:layout_width="2dp"
                                    android:layout_height="28dp"
                                    android:alpha="0.7"
                                    android:background="@color/white"
                                    app:layout_constraintTop_toBottomOf="@id/txt120ArrowUp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt120ArrowDown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▼"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/line120"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt120Distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="sans-serif"
                                    android:text="120m"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt120ArrowDown"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <!-- 150m -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/tick150"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="6dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt150Bonus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="+15"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt150ArrowUp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▲"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt150Bonus"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <View
                                    android:id="@+id/line150"
                                    android:layout_width="2dp"
                                    android:layout_height="28dp"
                                    android:alpha="0.7"
                                    android:background="@color/white"
                                    app:layout_constraintTop_toBottomOf="@id/txt150ArrowUp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt150ArrowDown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▼"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/line150"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt150Distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="sans-serif"
                                    android:text="150m"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt150ArrowDown"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <!-- 180m -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/tick180"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="6dp">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt180Bonus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="+20"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt180ArrowUp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▲"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt180Bonus"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <View
                                    android:id="@+id/line180"
                                    android:layout_width="2dp"
                                    android:layout_height="28dp"
                                    android:alpha="0.7"
                                    android:background="@color/white"
                                    app:layout_constraintTop_toBottomOf="@id/txt180ArrowUp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt180ArrowDown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="▼"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/line180"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt180Distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="sans-serif"
                                    android:text="180m"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toBottomOf="@id/txt180ArrowDown"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Section: Penalties (card) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="⚠️  Penalties"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif"
                            android:lineSpacingMultiplier="1.3"
                            android:text="⚠️ Stopped timer before limit: −3\n⚠️ Ignored 5 scroll reminders in a day: −2"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Section: Comg Soon (card) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="🛍️  Coming soon"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
