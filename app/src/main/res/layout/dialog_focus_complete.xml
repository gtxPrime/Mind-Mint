<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="20dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/completeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="22dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Lottie ring around crystal (behind) -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/sparkleAnim"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_loop="true" />

            <!-- Crystal floating slightly above the dialog for 3D effect -->
            <ImageView
                android:id="@+id/crystalImage"
                android:layout_width="129dp"
                android:layout_height="129dp"
                android:contentDescription="@string/app_name"
                android:elevation="2dp"
                android:rotation="15"
                android:src="@drawable/ruby"
                app:layout_constraintBottom_toBottomOf="@+id/sparkleAnim"
                app:layout_constraintEnd_toEndOf="@+id/sparkleAnim"
                app:layout_constraintStart_toStartOf="@+id/sparkleAnim"
                app:layout_constraintTop_toTopOf="@+id/sparkleAnim" />

            <LinearLayout
                android:id="@+id/mainHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_focus_complete_gradient"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp"
                android:translationY="-95dp"
                app:layout_constraintTop_toBottomOf="@+id/sparkleAnim">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/titleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Congratulations!"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/descText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Focus complete"
                    android:textColor="#C8E6C9"
                    android:textSize="16sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/coinsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:text="+0 Mint Crystals"
                    android:textColor="#00FFB0"
                    android:textSize="16sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/okBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_button_mint"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="OK"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>


