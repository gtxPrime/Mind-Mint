<?xml version="1.0" encoding="utf-8"?>

<resources>
<!--    Global theme colors-->
    <attr name="globalBg" format="reference|color" />
    <attr name="tintGlobalColor" format="reference|color" />
    <attr name="secondaryColor" format="reference|color" />
    <attr name="switchTrack" format="reference|color"/>
    <attr name="switchThumb" format="reference|color"/>
    <attr name="embeddedCards" format="reference|color"/>

    <declare-styleable name="CustomPieChart">
        <attr name="pieRadius" format="dimension" />
        <attr name="pieGlow" format="dimension" />
        <attr name="pieThickness" format="dimension" />
        <attr name="pieTextSize" format="dimension" />
        <attr name="pieStartAngle" format="float" />
        <attr name="pieEndAngle" format="float" />
        <attr name="pieGapDegree" format="float" />
    </declare-styleable>

    <declare-styleable name="RoundedBarChart">
        <attr name="radius" format="dimension" />
    </declare-styleable>
</resources>
