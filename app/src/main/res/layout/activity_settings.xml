<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    tools:context=".Activities.SettingsActivity"
    tools:ignore="LabelFor, ContentDescription, HardcodedText">

    <eightbitlab.com.blurview.BlurTarget
        android:id="@+id/blurTarget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="550dp"
                android:layout_height="550dp"
                android:layout_marginStart="-200dp"
                android:layout_marginTop="-200dp"
                android:background="@drawable/main_bg_gradient"
                android:backgroundTint="#59FD7D81"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="550dp"
                android:layout_height="550dp"
                android:layout_marginEnd="-200dp"
                android:layout_marginBottom="-200dp"
                android:background="@drawable/main_bg_gradient"
                android:backgroundTint="#2614B8A6"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:layout_width="550dp"
                android:layout_height="550dp"
                android:layout_marginStart="-350dp"
                android:background="@drawable/main_bg_gradient"
                android:backgroundTint="#33A78BFA"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </eightbitlab.com.blurview.BlurTarget>

    <TextView
        android:id="@+id/blockHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blockHead">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/timeLimits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/cardColor"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/timeBlur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:id="@+id/timerHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Time Limits"
                            android:textColor="@color/textColor"
                            android:textSize="26sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/remindDoomScrollingLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/timerHeading">

                            <ImageView
                                android:id="@+id/remindDoomIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/bell"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/remindDoomTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Remind me"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintBottom_toTopOf="@+id/remindDoomSubtitle"
                                app:layout_constraintEnd_toStartOf="@+id/remindDoomScrollingSwitch"
                                app:layout_constraintStart_toEndOf="@+id/remindDoomIcon"
                                app:layout_constraintTop_toTopOf="@+id/remindDoomIcon" />

                            <TextView
                                android:id="@+id/remindDoomSubtitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:alpha="0.7"
                                android:fontFamily="@font/inter18regular"
                                android:text="For specific content like Reels, Shorts, etc."
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/remindDoomIcon"
                                app:layout_constraintEnd_toStartOf="@+id/remindDoomScrollingSwitch"
                                app:layout_constraintStart_toStartOf="@+id/remindDoomTitle"
                                app:layout_constraintTop_toBottomOf="@+id/remindDoomTitle" />

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/remindDoomScrollingSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:thumbTint="@color/textColor"
                                app:trackTint="#283039" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/blockViewTimeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@+id/remindDoomScrollingLayout">

                            <ImageView
                                android:id="@+id/blockViewTimeIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/ic_app_block"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/blockViewTimeTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Block content"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintBottom_toTopOf="@+id/blockViewTimeSubtitle"
                                app:layout_constraintEnd_toStartOf="@+id/blockAfterWastedTimeSwitch"
                                app:layout_constraintStart_toEndOf="@+id/blockViewTimeIcon"
                                app:layout_constraintTop_toTopOf="@+id/blockViewTimeIcon" />

                            <TextView
                                android:id="@+id/blockViewTimeSubtitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:alpha="0.7"
                                android:fontFamily="@font/inter18regular"
                                android:text="Max daily hours for Reels, Shorts, etc."
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/blockViewTimeIcon"
                                app:layout_constraintEnd_toStartOf="@+id/blockAfterWastedTimeSwitch"
                                app:layout_constraintStart_toStartOf="@+id/blockViewTimeTitle"
                                app:layout_constraintTop_toBottomOf="@+id/blockViewTimeTitle" />

                            <com.google.android.material.materialswitch.MaterialSwitch
                                android:id="@+id/blockAfterWastedTimeSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:thumbTint="@color/textColor"
                                app:trackTint="#283039" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </eightbitlab.com.blurview.BlurView>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/blockingHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/cardColor"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@+id/timeLimits"
                app:strokeWidth="0dp">

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blockingBlur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/blockHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Blocking"
                            android:textColor="@color/textColor"
                            android:textSize="26sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/customAppBlockingLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/blockHeading">

                            <ImageView
                                android:id="@+id/customAppBlockingIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/shield"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/customAppBlockingTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/custom_app_blocking"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintBottom_toTopOf="@+id/customAppBlockingSubtitle"
                                app:layout_constraintEnd_toStartOf="@+id/customAppBlockingArrow"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@+id/customAppBlockingIcon"
                                app:layout_constraintTop_toTopOf="@+id/customAppBlockingIcon" />

                            <TextView
                                android:id="@+id/customAppBlockingSubtitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:alpha="0.7"
                                android:fontFamily="@font/inter18regular"
                                android:text="@string/select_apps_to_block_during_focus_mode"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="@+id/customAppBlockingIcon"
                                app:layout_constraintEnd_toStartOf="@+id/customAppBlockingArrow"
                                app:layout_constraintStart_toStartOf="@+id/customAppBlockingTitle"
                                app:layout_constraintTop_toBottomOf="@+id/customAppBlockingTitle" />


                            <ImageView
                                android:id="@+id/customAppBlockingArrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:src="@drawable/ic_chevron_right"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/textColor" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/blockingPopupDurationLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="15dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/customAppBlockingLayout">

                            <ImageView
                                android:id="@+id/blockingPopupDurationIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/ic_hourglass"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/blockingPopupDurationTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/blocking_popup_duration"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintBottom_toTopOf="@+id/blockingPopupDurationSubtitle"
                                app:layout_constraintStart_toEndOf="@+id/blockingPopupDurationIcon"
                                app:layout_constraintTop_toTopOf="@+id/blockingPopupDurationIcon" />

                            <TextView
                                android:id="@+id/blockingPopupDurationSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.7"
                                android:fontFamily="@font/inter18regular"
                                android:text="@string/min_5_seconds_in_seconds"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="@+id/blockingPopupDurationIcon"
                                app:layout_constraintStart_toStartOf="@+id/blockingPopupDurationTitle"
                                app:layout_constraintTop_toBottomOf="@+id/blockingPopupDurationTitle" />

                            <EditText
                                android:id="@+id/et_blocking_popup_duration"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:autofillHints="3"
                                android:backgroundTint="@color/textColor"
                                android:fontFamily="@font/inter18regular"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="3"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/tv_seconds_label"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_seconds_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:fontFamily="@font/inter18regular"
                                android:text="@string/sec"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintBaseline_toBaselineOf="@+id/et_blocking_popup_duration"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </eightbitlab.com.blurview.BlurView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/permissionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:visibility="visible"
                android:layout_marginTop="15dp"
                android:elevation="4dp"
                app:cardBackgroundColor="@color/cardColor"
                app:cardCornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@+id/blockingHolder"
                app:strokeColor="#26FD7D81"
                app:strokeWidth="1dp">

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/permissionBlurX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:blurOverlayColor="#80FF0000">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:padding="10dp"
                            android:text="@string/batter_notice"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/permissionArrow"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/permissionArrow"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="30dp"
                            android:contentDescription="@string/decor"
                            android:rotation="180"
                            android:src="@drawable/ic_arrow_back"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </eightbitlab.com.blurview.BlurView>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
















