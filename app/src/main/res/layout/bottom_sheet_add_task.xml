<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_shape"
    android:padding="20dp"
    tools:ignore="HardcodedText, Autofill,TextFields">

    <!-- Handle bar -->
    <View
        android:id="@+id/handleBar"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pill_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/sheetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Add Task"
        android:textColor="?attr/tintGlobalColor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/handleBar" />

    <!-- Emoji and Task Name Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nameCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sheetTitle">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/emojiCard"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/emojiText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_gra"
                android:gravity="center"
                android:text="âœ…"
                android:textSize="20sp" />

        </com.google.android.material.card.MaterialCardView>

        <EditText
            android:id="@+id/taskNameInput"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/inter18regular"
            android:hint="Task name..."
            android:paddingHorizontal="16dp"
            android:textColor="?attr/tintGlobalColor"
            android:textColorHint="?attr/tintGlobalColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/emojiCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/emojiCard"
            app:layout_constraintTop_toTopOf="@+id/emojiCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Priority Section -->
    <LinearLayout
        android:id="@+id/prioritySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/nameCard">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter18regular"
            android:text="Priority"
            android:textColor="?attr/tintGlobalColor"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/prioritySpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_outline"
            android:paddingHorizontal="12dp"
            android:popupBackground="@drawable/spinner_dropdown_bg"
            android:theme="@style/SpinnerTheme" />

    </LinearLayout>

    <!-- Set Date/Time Section -->
    <LinearLayout
        android:id="@+id/dateTimeSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/prioritySection">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter18regular"
            android:text="Set Date/Time"
            android:textColor="?attr/tintGlobalColor"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/dueDateClickable"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_outline"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_time"
                app:tint="@color/brainColor" />

            <TextView
                android:id="@+id/dueDateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter18regular"
                android:text="Today 3PM"
                android:textColor="?attr/tintGlobalColor"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


    <!-- Reminder Section -->
    <LinearLayout
        android:id="@+id/reminderSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/dateTimeSection">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter18regular"
            android:text="Reminder"
            android:textColor="?attr/tintGlobalColor"
            android:textSize="16sp" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/reminderSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:thumbTint="?attr/switchThumb"
            app:trackTint="?attr/switchTrack" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtons"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reminderSection">

        <Button
            android:id="@+id/cancelButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/inter18regular"
            android:text="Cancel"
            android:textColor="?attr/tintGlobalColor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/saveButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_pill_bg"
            android:fontFamily="@font/inter18regular"
            android:text="Save"
            android:textColor="?attr/tintGlobalColor"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
